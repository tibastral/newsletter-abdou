<h1>Listing parties</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Day</th>
    <th>Newsletter</th>
  </tr>

<% for party in @parties %>
  <tr>
    <td><%=h party.name %></td>
    <td><%=h party.day %></td>
    <td><%=h party.newsletter %></td>
    <td><%= link_to 'Show', newsletter_party_path(@newsletter, party) %></td>
    <td><%= link_to 'Edit', edit_newsletter_party_path(@newsletter, party) %></td>
    <td><%= link_to 'Destroy', newsletter_party_path(@newsletter, party), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New party', new_newsletter_party_path %>
<%= link_to 'Return to newsletter', @newsletter %>